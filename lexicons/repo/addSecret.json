{
  "lexicon": 1,
  "id": "sh.tangled.repo.addSecret",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Add a CI secret",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "repo",
            "key",
            "value"
          ],
          "properties": {
            "repo": {
              "type": "string",
              "format": "at-uri"
            },
            "key": {
              "type": "string",
              "maxLength": 50,
              "minLength": 1
            },
            "value": {
              "type": "string",
              "maxLength": 200,
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
