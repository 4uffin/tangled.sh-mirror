{
  "lexicon": 1,
  "id": "sh.tangled.repo",
  "needsCbor": true,
  "needsType": true,
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "name",
          "knot",
          "owner"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "name of the repo"
          },
          "owner": {
            "type": "string",
            "format": "did"
          },
          "knot": {
            "type": "string",
            "description": "knot where the repo was created"
          },
          "addedAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
